CREATE TABLE line_item(
  id SERIAL,
  transaction_date DATE,
  post_date DATE,
  description TEXT,
  amount NUMERIC(8,2),
  category_id INTEGER,
  transaction_type_id INTEGER,
  account_id INTEGER,
  check_number VARCHAR(5),
  type_detail_id INTEGER,     -- optional
  comment TEXT,
  data_hash CHAR(64),
  show_on_spending_report BOOLEAN,
  created TIMESTAMP WITH TIME ZONE,
  updated TIMESTAMP WITH TIME ZONE
);

CREATE TABLE category_rule(
    term VARCHAR(255),
    category VARCHAR(255),
    rule_type_id INTEGER
);
CREATE INDEX ON category_rule (term);
CREATE INDEX ON category_rule (rule_type_id);

CREATE TABLE account(
    id SERIAL,
    name VARCHAR(255)
);

CREATE TABLE category(
    id SERIAL,
    name VARCHAR(255)
);

CREATE TABLE type_detail(
    id SERIAL,
    name VARCHAR(255)
);

CREATE TABLE transaction_type(
    id SERIAL,
    name VARCHAR(255)
);

CREATE TABLE rule_type(
    id SERIAL,
    name VARCHAR(255)
)

COPY account(name) FROM stdin (FORMAT csv);
